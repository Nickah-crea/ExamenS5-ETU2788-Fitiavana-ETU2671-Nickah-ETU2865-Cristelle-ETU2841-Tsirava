[sub_resource type="GDScript" id="GDScript_j75q0"]
script/source = "extends Panel

var ingredients = [\"Tomate\", \"Fromage\", \"Oignon\", \"Pâte\"]

func _ready() -> void:
	var vbox = $VBoxContainer
	for ingredient in ingredients:
		var button = Button.new()
		button.text = ingredient
		# Utilise un Callable pour transmettre un argument à la fonction _on_ingredient_pressed
		button.connect(\"pressed\", Callable(self, \"_on_ingredient_pressed\").bind(ingredient))
		vbox.add_child(button)

func _on_ingredient_pressed(ingredient: String) -> void:
	print(ingredient + \" a été sélectionné!\")
"

